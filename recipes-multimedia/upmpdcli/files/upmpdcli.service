[Unit]
Description=UPnP Renderer front-end to MPD (CPU 3 isolated)
After=network-online.target mpd-auris.service
Wants=network-online.target

[Service]
Type=simple
User=upmpdcli
Group=upmpdcli
ExecStart=/usr/bin/taskset -c 3 /usr/bin/upmpdcli -c /etc/upmpdcli.conf
Restart=always
RestartSec=1min

[Install]
WantedBy=multi-user.target
